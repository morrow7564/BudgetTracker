<main class="container">
    <p id="userName">Welcome {{user.dataValues.f_name}} {{user.dataValues.l_name}}</p>
    <p id="userNum">#00000<span id="userid">{{user.dataValues.id}}</span></p>

    <section class="monthlyTotals">
        <div class="row">
            <div class="col-8">
                <h5>Monthly Budget</h5>
                    <hr><span class="dollarSign">$ </span><span id="monthlyBudget">{{user.dataValues.budget}}</span>
                    <button id="budgetModalBtn" type="button" data-toggle="modal" data-target="#editBudgetModal"><i class="fas fa-pencil-alt"></i></button>
            </div>
        </div>
    </section>

    {{!-- Edit Budget Modal --}}
    <section class="modal fade" id="editBudgetModal" tabindex="-1" role="dialog" aria-labelledby="editBudget" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Budget:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label for="updatedBudgetInput">Budget</label>
                    <input type="number" id="updatedBudgetInput" placeholder="$">
                </div>
                <div class="modal-footer">
                    <form id="editBudget">
                        <button type="submit">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </section>



    <section class="container section-space-outer-20">
        <div class="row ">
