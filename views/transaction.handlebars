<main class="container">
    <p id="userName">Welcome {{userTransactions.first_name}} {{userTransactions.last_name}}</p>
    <p id="userNum">#00000<span id="userid">{{userTransactions.user_id}}</span></p>

    <section class="monthlyTotals">
        <div class="row">
            <div class="col-md-4">
                <h5>Monthly Budget</h5>
                    <hr><span class="dollarSign">$ </span><span id="monthlyBudget">{{userTransactions.budget}}</span>
            </div>
            <div class="col-md-4">
                <h5>Amount Spent</h5>
                <hr><span class="dollarSign">$ </span><span id="amountSpent"></span>
            </div>
            <div class="col-md-4">
                <h5>Remaining Balance</h5>
                    <hr><span class="dollarSignBalance">$ </span><span id="remainingBalance"></span>
            </div>
        </div>
    </section>

    <section class="container section-space-outer-20">
        <div class="row ">
            <div class="col-lg-8">
                <div class="col-md-12" id="transactionSection">
                    <form id="createTransaction">
                        <h3><i class="fas fa-plus"></i> Transactions</h3>
                        <label for="tDate">Date of Transaction
                            <input id="tDate" type="date" required pattern="\d{4}-\d{2}-\d{2}"><span
                                class="validity"></span></label>

                        <label for="tCategory">Category</label>
                        <select id="tCategory" required="required">
                            <option value="">Pick a category</option>
                            <option value="Groceries">Groceries</option>
                            <option value="Healthcare"></i>Healthcare</option>
                            <option value="Travel">Travel</option>
                            <option value="Entertainment">Entertainment</option>
                            <option value="Food">Food</option>
                            <option value="Household Items">Household Items</option>
                        </select>
                        <br>
                        <label for="tSource">Source</label>
                        <input id="tSource" type="text" required="required" placeholder="Source">

                        <label for="tAmount">Amount</label>
                        <input id="tAmount" type="number" step="0.01" required="required" placeholder="$$$">

                        <button><i class="fas fa-plus-circle text-align-center"></i> Add</button>
                    </form>
                    <hr>
                    <table>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Source</th>
                            <th>Amount</th>
                            <th></th>
                        </tr>
                        {{#each userTransactions.transactions}}
                        <tr class="transactionRow">
                            <td>{{date}}</td>
                            <td class="tCategory">{{category}}</td>
                            <td>{{source}}</td>
                            <td class="amountDisplay">{{amount}}</td>
                            <td> <i class="fas fa-trash-alt deleteTransaction" tid="{{tid}}"></i></td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="col-md-12 ml-auto transactionChart">
                    <h4>My Transactions</h4>
                    <div id="donutchart">
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

